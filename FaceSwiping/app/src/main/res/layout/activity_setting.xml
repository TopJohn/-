<?xml version="1.0" encoding="utf-8"?>
<com.faceswiping.app.widget.CustomerScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="match_parent"
    android:background="@color/dark_background"
    android:orientation="vertical"
    android:scrollbars="none">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:layout_marginTop="30dp"
            android:orientation="vertical">


            <LinearLayout
                android:id="@+id/ll_clean_cache"
                android:layout_width="match_parent"
                android:layout_height="44dp"
                android:background="@drawable/list_item_background"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="15dp"
                    android:layout_weight="1"
                    android:text="@string/clean_cache"
                    android:textColor="@color/done_text_color_normal"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/tv_cache_size"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginRight="15dp"
                    android:textColor="@color/gray_text_color"
                    android:textSize="14sp"
                    tools:text="13M" />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:layout_marginLeft="16dp"
                android:background="@color/gray_line" />

            <LinearLayout
                android:id="@+id/ll_double_click_exit"
                android:layout_width="match_parent"
                android:layout_height="44dp"
                android:background="@drawable/list_item_background"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="15dp"
                    android:layout_weight="1"
                    android:text="@string/double_click_exit"
                    android:textColor="@color/done_text_color_normal"
                    android:textSize="16sp" />

                <com.faceswiping.app.widget.ToggleButton
                    android:id="@+id/tb_double_click_exit"
                    android:layout_width="45dp"
                    android:layout_height="20dp"
                    android:layout_gravity="center_vertical"
                    android:layout_marginRight="15dp" />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:layout_marginLeft="16dp"
                android:background="@color/gray_line" />

            <LinearLayout
                android:id="@+id/ll_update"
                android:layout_width="match_parent"
                android:layout_height="44dp"
                android:background="@drawable/list_item_background"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="15dp"
                    android:text="@string/update"
                    android:textColor="@color/done_text_color_normal"
                    android:textSize="@dimen/text_size_16" />
            </LinearLayout>




        </LinearLayout>


        <LinearLayout
            android:id="@+id/ll_about"
            android:layout_width="match_parent"
            android:layout_marginTop="15dp"
            android:layout_height="44dp"
            android:background="@drawable/list_item_background"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="15dp"
                android:text="关于Face+"
                android:textColor="@color/done_text_color_normal"
                android:textSize="@dimen/text_size_16" />
        </LinearLayout>
        <Button
            android:id="@+id/btn_logout"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_marginBottom="25dp"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:layout_marginTop="15dp"
            android:background="@drawable/red_background"
            android:text="@string/tuichudenglu"
            android:textColor="@color/white"
            android:textSize="16sp" />

    </LinearLayout>


</com.faceswiping.app.widget.CustomerScrollView>